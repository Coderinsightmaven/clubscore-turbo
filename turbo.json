{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**",
        "out/**"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:all": {
      "cache": false,
      "persistent": true
    },
    "start:mac": {
      "cache": false,
      "persistent": true,
      "env": ["HOST", "PORT", "CLUBSCORE_DB_PATH", "SETUP_WEB_DIST"]
    },
    "build:native": {
      "dependsOn": ["^build"]
    }
  }
}
